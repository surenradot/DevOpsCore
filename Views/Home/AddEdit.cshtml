@model CoreApp.Models.UserDto
@{
    ViewData["Title"] = "AddEdit";
}

<h2>Add/Edit User</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-controller="home" asp-action="AddEdit" method="post" autocomplete="off" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nam">Name</label>
                <input type="text" class="form-control" placeholder="Name" asp-for="Name">
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" placeholder="email" asp-for="Email">
            </div>

            <div class="form-group">
                <label for="dob">DOB:</label>
                <input type="date" class="form-control" placeholder="DOB" asp-for="DOB" required>
            </div>
            <div class="form-group">
                <label for="file">Profile Image:</label>
                <input type="file" name="file" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>

